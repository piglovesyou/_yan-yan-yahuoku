

// split pane
.goog-splitpane-handle-horizontal
  cursor: col-resize;

.goog-splitpane-handle,
.goog-splitpane-first-container,
.goog-splitpane-second-container
  position: absolute;


splitPaneHandleHeight = 100px
.goog-splitpane-handle
  width: 0 !important
  overflow: visible !important
  z-index: 0
  .handle
    position: relative
    top: 50%
    width: 0 !important
    .handle-content
      position: absolute
      top: -50px
      width: 20px
      height: splitPaneHandleHeight
      background-color: rgba(40,40,40,.2)

.goog-splitpane-first-container
  border-right: 1px #CFCFCF solid;
  .goog-thousandrows
    height: 100%
  .goog-thousandrows-page
    background-image: url(../images/bg_fabric_plaid.png)

.goog-splitpane-second-container
  width: 300px
  background-image: url(../images/bg_swirl.png);
  box-shadow: 1px 3px 8px rgba(0, 0, 0, 0.10) inset
  .goog-scroller
    height: 100%

.goog-splitpane-first-container,
.goog-splitpane-second-container
  .goog-scroller-bar
    background: none
    width: 20px
  .goog-scroller-bar-thumb
    border-radius: 1px
    background: rgba(0,0,0,.1)
    width: 14px
    left: 3px !important
  .goog-scroller-bar:hover,
  .goog-slider-dragging
    background: rgba(0,0,0,.03)
    .goog-scroller-bar-thumb
      background: rgba(0,0,0,.3)
  .goog-slider-thumb-dragging
    background: rgba(0,0,0,.4) !important









rowHeight = 138px
.goog-splitpane-first-container
  position: relative
  .goog-thousandrows-row
    box-sizing: border-box
    height: rowHeight !important

    // Override bootstrap
    .row
      padding: 14px 5px
  .goods-image
    text-align: center
  h4
    ellipsis(true)

// Override bootstrap
.nav > li > a:hover
  background-color: rgba(0,0,0,.03)

