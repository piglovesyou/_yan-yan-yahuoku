

$distFromCenter = 120px
$menuItemWidth = 50px
$menuItemLineHeight = 52px
$transitionDuration = .2s
$transitionEasing = ease-out

.contextmenu-overlay  
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%;
  background-color: rgba(0,0,0,.1)
  opacity 1
  transition: opacity .2s linear
  &.goog-container-disabled
    opacity 0

.contextmenu  
  position: absolute;
  top: 300px;
  left: 400px;
  .contextmenu-inner
    position relative
    left ($menuItemWidth / -2)
    top ($menuItemWidth / -2)
  .menu-item
    position: absolute;
    transition: -webkit-transform $transitionDuration $transitionEasing
    .menu-item-inner
      display: block
      position relative
      width: $menuItemWidth
      height: $menuItemWidth
      border-radius ($menuItemWidth / 2)
      line-height $menuItemLineHeight
      text-align center
      transition:
        background-color ($transitionDuration / 4) linear ($transitionDuration / 4),
        color ($transitionDuration / 4) linear ($transitionDuration / 4),
        -webkit-transform $transitionDuration $transitionEasing
      font-size 38px
      text-decoration none
      color #333
    &.goog-control-hover .menu-item-inner
      background-color #0088cc
      color white

    &.goog-control-active .menu-item-inner
      transition:
        background-color 0 linear
      background-color: #0074ad

    &.blinking .menu-item-inner
      transition:
        background-color 0 linear
      background: #009be8

