@keyframes blink
  0% { opacity: 1 }
  49% { opacity: 1 }
  50% { opacity: 0 }
  49% { opacity: 0 }

.blinking
  -webkit-animation-name: blink;
  -webkit-animation-duration: .14s;
  -webkit-animation-iteration-count:infinite;
  -webkit-animation-direction: alternate;
  -webkit-animation-delay: 0s;

  

