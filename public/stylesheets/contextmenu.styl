

$distFromCenter = 120px
$menuItemWidth = 60px
$transitionDuration = .2s
$transitionEasing = ease-out

.contextmenu-overlay  
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%;
  background: rgba(0,0,0,.1)
.container  
  position: absolute;
  top: 300px;
  left: 400px;
  width: 400px;
  height: 400px;
  border: gray 1px solid
  .container-inner
    position relative
    left ($menuItemWidth / -2)
    top ($menuItemWidth / -2)
  .menu-item
    position: absolute;
    transition: -webkit-transform $transitionDuration $transitionEasing
    .menu-item-inner
      position relative
      width: $menuItemWidth
      height: $menuItemWidth
      background: blue
      border-radius ($menuItemWidth / 2)
      color white
      line-height $menuItemWidth
      text-align center
      transition: -webkit-transform $transitionDuration $transitionEasing
