
detailTitleHeight = 32px

.goog-splitpane-second-container
  .goog-scroller-container
    position: relative
  .goog-scroller-bar
    z-index: 2

  .detail-title-fixed
    .detail-title
      position: absolute
      box-sizing: border-box
      width: 100%
      border-bottom: 1px #CFCFCF solid
      box-shadow: 0 2px 3px rgba(0, 0, 0, .1)
      z-index: 1
    .detail-inner
      padding-top: detailTitleHeight

  .detail-title
    clearfix()
    margin: 0
    padding: 0 20px 0 10px
    background: whiteSmoke;
    line-height: detailTitleHeight

  .detail-title-inner
    ellipsis(true)
  .detail-title-buttons
    float: right

  .detail-title-fixedstatebutton
    font-size: 22px
    padding: 5px;
    margin-bottom: 2px;

  .detail-description-container
    margin: 10px 20px

  // table style
  .table-bordered th
    width: 30%
    font-weight: normal
    background: #D9EDF7
  .detail-td-tablecontainer
    padding: 0
    > .table
      margin-bottom: 0
    th
      border-left: none


