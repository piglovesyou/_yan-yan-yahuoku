
.logo
  margin-left 7px
  a
    transition opacity .1s linear
  a:hover
    opacity .7
  a:active
    transition opacity .01s linear
    opacity .4

.modal-title
  h1
    margin-bottom 20px
  .nav-tabs
    margin-bottom 0
.modal-content-content
  overflow auto
  .tab-belonging
    display none
    &.active
      display block


toolbarHeight = 32px
tabBorderColor = #b6b6b6

toolbarLeftWidth = 62px
toolbarRightWidth = 100px
.toolbar
  background: linear-gradient(top, black, #444);
  height: toolbarHeight
  box-sizing: border-box
  border-bottom: kpx tabBorderColor solid
  line-height: toolbarHeight
  

  .left
    width: toolbarLeftWidth
    float: left
  .right
    width: toolbarRightWidth
    box-sizing: border-box
    padding-right: 6px
    float: right
    text-align: right

  .logo,
  .logout,
  .username,
  .watch-tab
    display: inline-block
    padding: 0 3px
  .watch-tab
    color: rgba(255,255,255,.4)
    &:hover
      color: rgba(255,255,255,.6)
    &:focus
      color: rgba(255,255,255,1)
    cursor: pointer
    text-decoration: none

tabHeight = 24px
  
.tabs
  margin-left: toolbarLeftWidth
  margin-right: toolbarRightWidth
  padding-top: toolbarHeight - tabHeight

.tab
  position: relative
  float: left
  padding: 0 15px
  margin-right: -17px
  box-sizing: border-box
  width: 18%
  height: tabHeight + 1px
  min-width: 180px
  color: #444
  cursor: default
  border-bottom 1px #f2f2f2 solid
  background: url(../images/aa/bg_tableft.png) left top no-repeat,
              url(../images/aa/bg_tabright.png) right top no-repeat
  &.selected
    background: url(../images/bg_tableft.png) left top no-repeat,
                url(../images/bg_tabright.png) right top no-repeat
    z-index: 10 !important
    delBtnWidth = 14px
    .del-btn
      display: block;
      position: absolute
      top 6px
      right 14px
      width: delBtnWidth
      height: delBtnWidth
      line-height delBtnWidth
      text-align center
      font-size: 14px
      color #ccc
      text-decoration none
      &:hover
        background #aaa
        border-radius delBtnWidth
        color #fff
      &:active
        background #666
        border-radius delBtnWidth
  .del-btn
    display none

.tab:first-child:last-child .del-btn,
.tab.tab-dragging .del-btn
  display none


for i in 1 2 3 4 5
  .tab:nth-child({i})
    z-index: 5 - i

.tab-content
  box-sizing: border-box
  height: tabHeight
  padding: 3px 0 0 3px
  line-height: tabHeight - 4px
  ellipsis(true)
  tabUnselectedStyle()
  background: url(../images/aa/bg_tabcenter.png) left top repeat-x

.selected .tab-content
  background: url(../images/bg_tabcenter.png) left top repeat-x

.tab-dragging
  top: toolbarHeight - tabHeight !important

.tabs-content
  position: relative
  clearfix()

.tab-adder
  position: absolute
  top: 0
  height: tabHeight
  width: 22px
  background: url(../images/bg_tabadder.png) center top no-repeat
  &:hover
    background-position: center -24px
  &:active
    background-position: center -48px
